<% sec = Time.now - comment.created_at 
if sec > 60*60*24
	string = (sec / (60*60*24)).to_i.to_s + " 일 전"
elsif sec > 60*60
	string = (sec / (60*60)).to_i.to_s + " 시간 전"
elsif sec > 60
	string = (sec / 60).to_i.to_s + " 분 전"
else
	string = sec.to_i.to_s + " 초 전"
end
%>
<div class="row" style="margin-top:3px;">
  <div class="col-md-3">
    <a href="/users/<%=comment.user.id%>" style="font-weight: bold; color:#560E06; font-size:12px; margin: auto;" class="show_progress_bar">
	<%= image_tag(comment.user.profile_pic.url(:thumb), size: '90x90', class: 'rcorners') %><br />
	<%= comment.user.nil? ? 'undefined' : comment.user.nick_name%></a>
  </div>
  <div class="col-md-9" style="margin-top:5px">
  	<i style="font-size:11px;">(<%=string%>)</i><br/>
    <%=comment.description%>
  </div>

</div>

<hr style="margin: auto;">