<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put },:html => {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
<fieldset>
  <div class="form-group">
 
    <div class="col-lg-5">
       <%= f.label :"이메일", "이메일" %>
      <%= f.text_field :email, disabled:true, :class=>'form-control' %>
       </div>
  </div>

  <div class="form-group">

    <div class="col-lg-5">
        <%= f.label :"닉네임" %>
        <%= f.text_field :nick_name, :class=>'form-control' %>
    </div>
  </div>


<div class="form-group">

    <div class="col-lg-5">
        <%= f.label :"소개" %>
        <%= f.text_area :description, :size=>"10x7",:class=>'form-control' %>
    </div>
  </div>
  

  <div class="actions">
    <%= f.submit "수정하기", :class => "btn btn-default btn-center" %>
  </div>

</fieldset>
<% end %>

