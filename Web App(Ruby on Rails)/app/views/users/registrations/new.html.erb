<div class="well bs-component" style="width:50%; margin:auto;">
  
<h2>VoiceWave 회원가입</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
<fieldset>
      
  <div class="form-group">
    <%= f.label :email, '이메일', :class => 'col-lg-2 control-label' %><br />
    <div class="col-lg-10">
    <%= f.email_field :email, autofocus: true, :class => 'form-control',:placeholder => '예)aaa@bbb.com' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :nick_name, '닉네임', :class => 'col-lg-2 control-label' %><br />
    <div class="col-lg-10">
    <%= f.text_field :nick_name, :class => 'form-control', :placeholder => '예) 둘리(2글자 이상)'  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, '비밀번호', :class => 'col-lg-2 control-label'  %>
    <br />
    <div class="col-lg-10">
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control',:placeholder => '8글자 이상' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, '비밀번호 확', :class => 'col-lg-2 control-label' %><br />
    <div class="col-lg-10">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, '소개', :class => 'col-lg-2 control-label' %><br />
    <div class="col-lg-10">
     <%= f.text_area :description, size: "10x7", :class => 'form-control',:maxlength=>300,:placeholder => "자기소개를 해주세요 (300자 미만)", :value => "" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "등록", :class => 'btn btn-md btn-default btn-block btn-center' %>
  </div>
  </fieldset>
      
<% end %>

<%= render "users/shared/links" %>
</div>